<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Quote\Api\Data\CartInterface">
        <plugin name="salesblock_prevent_add_quote" type="Yireo\SalesBlock2\Plugin\PreventAddToQuote" />
    </type>

    <type name="Magento\Checkout\Controller\Cart\Index">
        <plugin name="salesblock_cart_controller_quote_reset" type="Yireo\SalesBlock2\Plugin\CartControllerQuoteReset" />
    </type>

    <type name="Magento\Checkout\Controller\Index\Index">
        <plugin name="salesblock_checkout_controller_quote_reset" type="Yireo\SalesBlock2\Plugin\CheckoutControllerQuoteReset" />
    </type>

    <type name="Yireo\SalesBlock2\Logger\Debugger">
        <arguments>
            <argument name="logger" xsi:type="object">Yireo\SalesBlock2\Logger\VirtualCustom</argument>
        </arguments>
    </type>

    <virtualType type="Magento\Framework\Logger\Monolog" name="Yireo\SalesBlock2\Logger\VirtualCustom">
        <arguments>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Yireo\SalesBlock2\Logger\VirtualCustomLogHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType type="Magento\Framework\Logger\Handler\Base" name="Yireo\SalesBlock2\Logger\VirtualCustomLogHandler">
        <arguments>
            <argument name="fileName" xsi:type="string">var/log/yireo_salesblock.log</argument>
        </arguments>
    </virtualType>
</config>

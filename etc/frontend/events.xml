<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:/Event/etc/events.xsd">
    <event name="controller_action_predispatch">
        <observer name="yireo_salesblock2_prevent_cart_actions" instance="Yireo\SalesBlock2\Observer\PreventCartActions"/>
    </event>
    <event name="core_block_abstract_to_html_after">
        <observer name="yireo_salesblock2_replace_rule_variables" instance="Yireo\SalesBlock2\Observer\ReplaceRuleVariables"/>
    </event>
    <event name="sales_quote_save_before">
        <observer name="yireo_salesblock2_prevent_quote_save" instance="Yireo\SalesBlock2\Observer\PreventQuoteSave"/>
    </event>
    <event name="sales_order_place_before">
        <observer name="yireo_salesblock2_prevent_order_save" instance="Yireo\SalesBlock2\Observer\PreventOrderSave"/>
    </event>
</config>